<div class="uk-flex uk-flex-center uk-margin-top">
    <div class="uk-width-1-2@m uk-width-2-3@s uk-width-1-1">

        <div class="uk-card uk-card-default uk-card-body uk-box-shadow-small uk-border-rounded">

            {{ form_start(form, {'attr': {'class': 'uk-form-stacked'}}) }}

                {{ form_widget(form, {
                    'attr': {
                        'class': 'uk-width-1-1'
                    }
                }) }}

                <div class="uk-margin uk-text-center">
                    <button class="uk-button uk-button-primary uk-border-pill">
                        {{ button_label|default('Enregistrer') }}
                    </button>
                </div>

            {{ form_end(form) }}

        </div>

    </div>
</div>
